<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out" />
    <param name="encoding" value="Cp1252"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p %m *** %r %t %c:%L%n" />
    </layout>
  </appender>

  <appender name="dailyFile" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="{{ log4j_path }}/geotrack-bck.log" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <param name="encoding" value="Cp1252"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p %m *** %r %t %c:%L%n" />
    </layout>
  </appender>

  <appender name="ALIS" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="{{ log4j_path }}/geotrack-alis.log" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <param name="encoding" value="Cp1252"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p %m *** %r %t %c:%L%n" />
    </layout>
  </appender>
  
  
  <!-- PUC log standard: cf. GEOTRACK-209 / SpÃ©cifications BCO_log applicatifs S0F1.pdf -->
  <appender name="dailyPucFile" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="{{ log4j_puc_path }}/geotrack-puc-bck.log" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <param name="encoding" value="Cp1252"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS};%m%n" />
    </layout>
  </appender>

   <appender name="bddPurgeFile" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="{{ log4j_path }}/geotrack-trtpurge-bck.log" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <param name="encoding" value="Cp1252"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="LOCAL-BCK-PURGE %d{yyyy-MM-dd HH:mm:ss} %p %m *** %r %t %c:%L%n" />
    </layout>
  </appender>
  
  <logger name="org.hibernate"><level value="WARN" /></logger>

  <logger name="com.orange.puc" additivity="false">
     <level value="{{ log4j_puc_lvl }}" />
   	 <appender-ref ref="dailyPucFile" />
  </logger>

  <logger name="LoggerAlis">
    <level value="INFO" />
    <appender-ref ref="ALIS"/>
  </logger>

  <logger name="com.orange.purge" additivity="false">
     <level value="{{ log4j_bddpurge_lvl }}" />
   	 <appender-ref ref="bddPurgeFile" />
  </logger>

  <root>
    <priority value="{{ log4j_lvl }}" />
    <appender-ref ref="dailyFile" />
  </root>
</log4j:configuration>